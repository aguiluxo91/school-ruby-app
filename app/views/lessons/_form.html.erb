<%= form_for(@lesson, :html => { role: "form" }) do |f| %>
    <div class="mb-3">
        <%= f.label :teacher, class:"form-label" %>
        <%= f.collection_select :teacher_id, Teacher.order(:id), :id, :full_name %>
    </div>

    <div class="mb-3">
        <%= f.label :hour, class:"form-label" %>
        <%= f.time_field :hour, class:"form-control" %>
    </div>

    <div class="form-group">
        <div class="mb-3 form-check">
                <%= f.label :monday, class:"form-check-label" %>
                <%= f.check_box :monday, class:"form-check-input" %>
        </div>
        <div class="mb-3 form-check">
                <%= f.label :tuesday, class:"form-check-label" %>
                <%= f.check_box :tuesday, class:"form-check-input" %>
        </div>
        <div class="mb-3 form-check">
                <%= f.label :wednesday, class:"form-check-label" %>
                <%= f.check_box :wednesday, class:"form-check-input" %>
        </div>
        <div class="mb-3 form-check">
                <%= f.label :thursday, class:"form-check-label" %>
                <%= f.check_box :thursday, class:"form-check-input" %>
        </div>
        <div class="mb-3 form-check">
                <%= f.label :friday, class:"form-check-label" %>
                <%= f.check_box :friday, class:"form-check-input" %>
        </div>
    </div>

    <div class="mb-3">
        <%= f.label :group, class:"form-label" %>
        <%= f.collection_select :group_id, Group.order(:id), :id, :group_number %>
    </div>

    <div class="mb-3">
        <%= f.label :subject, class:"form-label" %>
        <%= f.collection_select :subject_id, Subject.order(:id), :id, :name %>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
<% end %>
<%= render 'shared/errors_html', obj: @lesson %>

<div class="col-md-6 border rounded shadow-md p-3 mx-auto">
    <%= form_for(@lesson, :html => { role: "form" }) do |f| %>
        <div class="mb-3">
            <%= f.label :teacher, class:"form-label" %>
            <%= f.collection_select(:teacher_id, Teacher.order(:id), :id, :full_name, {:include_blank => 'Select the Teacher'}, {:class => "form-select"}) %>
        </div>

        <div class="mb-3">
            <%= f.label :hour, class:"form-label" %>
            <%= f.time_field :hour, class:"form-control" %>
        </div>

        <div class="form-group">
            <p>Check only 1 day</p>
            <div class="mb-3 form-check">
                    <%= f.check_box :monday, class:"form-check-input" %>
                    <%= f.label :monday, class:"form-check-label" %>
            </div>
            <div class="mb-3 form-check">
                    <%= f.label :tuesday, class:"form-check-label" %>
                    <%= f.check_box :tuesday, class:"form-check-input" %>
            </div>
            <div class="mb-3 form-check">
                    <%= f.label :wednesday, class:"form-check-label" %>
                    <%= f.check_box :wednesday, class:"form-check-input" %>
            </div>
            <div class="mb-3 form-check">
                    <%= f.label :thursday, class:"form-check-label" %>
                    <%= f.check_box :thursday, class:"form-check-input" %>
            </div>
            <div class="mb-3 form-check">
                    <%= f.label :friday, class:"form-check-label" %>
                    <%= f.check_box :friday, class:"form-check-input" %>
            </div>
        </div>

        <div class="mb-3">
            <%= f.label :group, class:"form-label" %>
            <%= f.collection_select( :group_id, Group.order(:id), :id, :group_number, {:include_blank => 'Select the Group'}, {:class => "form-select"}) %>
        </div>

        <div class="mb-3">
            <%= f.label :subject, class:"form-label" %>
            <%= f.collection_select(:subject_id, Subject.order(:id), :id, :name, {:include_blank => 'Select the Subject'}, {:class => "form-select"}) %>
        </div>


        <%= f.submit(@lesson.new_record? ? "Create Lesson": "Update Lesson", class: "btn btn-primary btn-lg") %>
    <% end %>
</div>